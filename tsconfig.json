{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "lib": ["es2021", "DOM.Iterable"],
      "module": "es2022",
      "target": "es2022",
      "moduleResolution": "node16",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "sourceMap": true,
  
      "outDir": "dist",
      "rootDir": "src"
    },
  
    "include": ["src/**/*"]
  }